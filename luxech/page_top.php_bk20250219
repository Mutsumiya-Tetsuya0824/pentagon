				</div>
				<div class="top-blog_list">
					<?php
					$count = 0;

					$exclude_id = [];

					// $top_post = get_field('top_blog_list', 'option');

					if (!empty($top_post)) :
						foreach ($top_post as $data) :
							$post = get_post($data);
							$count++;
							array_push($exclude_id, $data);

							$image_url = get_the_post_thumbnail_url($data) ? get_the_post_thumbnail_url($data) :  '';
							$image_caption = get_the_post_thumbnail_caption($data) ? get_the_post_thumbnail_caption($data) :  get_the_title($data);
							// category
							$categories = get_the_category($data);
					?>
							<article class="blog-item item<?php echo esc_attr($count); ?>">
								<figure class="blog-item_thumbnail"><img src="<?php echo esc_url($image_url); ?>" alt="<?php echo esc_attr($image_caption); ?>"></figure>
								<div class="blog-item_header">
									<ul class="blog-item_category">
										<?php foreach ($categories as $cate) : ?>
											<li><a href="<?php echo esc_url(home_url('/category/') . $cate->slug); ?>"><?php echo esc_attr($cate->name); ?></a></li>
										<?php endforeach; ?>
									</ul>
									<h3 class="blog-item_title"><a href="<?php echo get_the_permalink($data); ?>"><?php echo  get_the_title($data); ?></a></h3>
								</div>
								<div class="blog-item_excerpt"><?php echo get_the_excerpt($data); ?></div>
							</article>
						<?php
						endforeach;
					endif;

					$post_num = 6 - $count;
					$query = new WP_Query([
						'posts_per_page' => $post_num,
						'post__not_in' => 	$exclude_id
					]);
					if ($query->have_posts()) :
						while ($query->have_posts()) :
							$query->the_post();
							$count++;
							// post thumbnail
							$image_url = get_the_post_thumbnail_url() ? get_the_post_thumbnail_url() :  '';
							$image_caption = get_the_post_thumbnail_caption() ? get_the_post_thumbnail_caption() :  get_the_title();
							// category
							$categories = get_the_category();
						?>
							<article class="blog-item item<?php echo esc_attr($count); ?>">
								<figure class="blog-item_thumbnail">
									<?php if (has_post_thumbnail()) {
										the_post_thumbnail('full');
									} else {
										echo '<img src="' . get_stylesheet_directory_uri() . '/assets/img/materials/archive/noimage.jpg" alt="">';
									} ?>
									<!-- <img src="<?php echo esc_url($image_url); ?>" alt="<?php echo esc_attr($image_caption); ?>"> -->
								</figure>
								<div class="blog-item_header">
									<ul class="blog-item_category">
										<?php foreach ($categories as $cate) : ?>
											<li><a href="<?php echo esc_url(home_url('/category/') . $cate->slug); ?>"><?php echo esc_attr($cate->name); ?></a></li>
										<?php endforeach; ?>
									</ul>
									<h3 class="blog-item_title"><a href="<?php the_permalink(); ?>"><?php the_title(); ?></a></h3>
								</div>
								<div class="blog-item_excerpt"><?php the_excerpt(); ?></div>
							</article>
					<?php
						endwhile;
					endif;
					wp_reset_postdata();
					?>
				</div>

				<div class="btn_normal normal-size"><a href="/blog">もっと見る</a></div>

			</div>
		</section>
